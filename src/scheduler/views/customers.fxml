<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane fx:id="mainPane" hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="250.0" minWidth="-Infinity" vgap="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scheduler.controllers.CustomersController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints />
  </columnConstraints>
  <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <TableView fx:id="tableCustomers" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2">
        <columns>
          <TableColumn fx:id="colName" prefWidth="75.0" text="%customer" />
          <TableColumn fx:id="colAddress" prefWidth="75.0" text="%address" />
            <TableColumn fx:id="colPhone" prefWidth="75.0" text="%phone" />
        </columns>
      </TableView>
      <VBox minHeight="200.0" prefHeight="300.0" spacing="10.0" GridPane.columnIndex="2">
         <children>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleAddCustomer" prefHeight="25.0" prefWidth="140.0" text="%add" />
             <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleModifyCustomer" prefHeight="25.0" prefWidth="193.0" text="%modify" />
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleDeleteCustomer" prefHeight="25.0" prefWidth="206.0" text="%delete" />
            <Button alignment="CENTER" cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" prefHeight="25.0" prefWidth="274.0" text="%cancel" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
