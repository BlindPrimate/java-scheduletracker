<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="-Infinity" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scheduler.controllers.RootController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <TableView fx:id="appointmentTable" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
        <columns>
            <TableColumn fx:id="colCustomer" prefWidth="100.0" text="Customer" />
            <TableColumn fx:id="colStartTime" prefWidth="100.0" text="Starting Time" />
            <TableColumn fx:id="colEndTime" prefWidth="100.0" text="Ending Time" />
            <TableColumn fx:id="colType" prefWidth="100.0" text="Type" />
        </columns>
      </TableView>
      <ButtonBar prefWidth="200.0" GridPane.rowIndex="2">
        <buttons>
          <Button mnemonicParsing="false" onAction="#handleAddButton" text="Add" />
            <Button mnemonicParsing="false" onAction="#handleModifyButton" text="Modify " />
            <Button mnemonicParsing="false" onAction="#handleDeleteButton" text="Delete" />
            <Button mnemonicParsing="false" onAction="#handleExit" text="Exit" />
        </buttons>
      </ButtonBar>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <ToggleButton fx:id="toggleAll" mnemonicParsing="false" text="All" />
            <ToggleButton fx:id="toggleWeek" mnemonicParsing="false" text="This Week" />
            <ToggleButton fx:id="toggleMonth" mnemonicParsing="false" text="This Month" />
         </children>
      </HBox>
   </children>
</GridPane>
